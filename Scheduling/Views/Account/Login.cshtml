@model Scheduling.Models.ViewModels.LoginViewModel
<h1>Sign In</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                <form id="account" method="post" asp-action="Login" asp-controller="Account">
                    <h4>Use your registered Email and password to login</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="Email"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" asp-for="Password"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2 checkbox">
                            <label asp-for="RememberMe" class="pr-4 pl-0">
                                <input asp-for="RememberMe" />
                            </label>
                            Remember Me ?
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10 offset-md-2">
                            <input class="btn btn-success" type="submit" value="Log In" />
                        </div>
                    </div>
                    <p class="col-md-10 offset-md-2">
                        <a asp-action="Register">Sign Up</a>
                    </p>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}